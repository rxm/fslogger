/opt/share/fslogger/logs/pbit.log {
        daily
        missingok
        compress
        delaycompress
        create 644 fslogger fslogger
        dateext
        # keep a year's worth of logs
        rotate 366
        # rotate first, then apply script
        sharedscripts
        postrotate
            test ! -f /var/run/fslogger.pid || kill -PIPE $(cat /var/run/fslogger.pid)
        endscript
}